button(color, size= big)
    background: color
    if color > #999
        color: #333
    else
        color: #fff
    box-shadow: inset 0 -3px 0 color - #222
    text: title
    if size == big
        display: block
        padding: 10px 20px 13px
        border-radius: 5px
        text: large center
        text-shadow: 1px 1px 1px color - #222
    else
        display: inline-block
        padding: 4px 10px 8px
        border-radius: 3px
    &:hover
        box-shadow: inset 0 -5px 0 color - #222, inset 0 -7px 5px rgba(#fff, .3), 0 1px 3px rgba(#000, .2)
        text-shadow: 1px 2px 1px color - #222

.donate-button
    text-align: center
    a
        button: green
        display: inline-block
    a:hover
        text-decoration: none
        color: #fff