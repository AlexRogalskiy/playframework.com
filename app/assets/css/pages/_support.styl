                &:last-child
                    background-image: image("support/contributors@2x.png")

    .coreteam
        border-top: 1px solid #eee
        margin: 20px 0
        padding: 20px 0
        > a
            display: block
            overflow: hidden
            &:after
                content: none
            img
                float: left
                margin: 0 10px 10px 0
